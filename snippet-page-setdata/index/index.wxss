.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.container {
  font-size: 24rpx;
  color: rgb(129, 129, 129);
}
.head {
  display: flex;
  justify-content: space-between;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
}
.log {
  width: 50%;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  color:green;
}
.control {
  width: 50%;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.control .buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
}
.control button {
  height: 80rpx;
  font-size: 30rpx;
  width: 120rpx;
  display: inline-block;
}
.list {
  margin-top: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
.info-top {
  display: flex;
}
.label {
  font-weight: bold;
  margin-right: 20rpx;
  color: black;
}
.name {
  width: 300rpx;
}
.gender {
  margin-left: 60rpx;
}
.status {
  border: 1rpx solid #ccc;
  margin-left: 80rpx;
  width: 80rpx;
  height: 30rpx;
}
.status:after {
  display: block;
  width: 40rpx;
  content: ' ';
  height: 30rpx;
  background-color: red;
}
.status-checked:after {
  background-color: green;
  margin-left: 40rpx;
}
.person-about {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #ccc;
  font-style: italic;
}
